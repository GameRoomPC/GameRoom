<?xml version="1.0" encoding="UTF-8"?>
<project name="module_gameroom" default="compile.module.gameroom">
  <dirname property="module.gameroom.basedir" file="${ant.file.module_gameroom}"/>
  
  <property name="module.jdk.home.gameroom" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.gameroom" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.gameroom" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.gameroom" value="-encoding UTF-8 -source 8 -target 8 ${compiler.args}"/>
  
  <property name="gameroom.output.dir" value="${module.gameroom.basedir}/out/production/GameRoom"/>
  <property name="gameroom.testoutput.dir" value="${module.gameroom.basedir}/out/test/GameRoom"/>
  
  <path id="gameroom.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="gameroom.module.production.classpath">
    <path refid="${module.jdk.classpath.gameroom}"/>
    <path refid="library.com.mashape.unirest:unirest-java:1.4.9.classpath"/>
    <path refid="library.org.controlsfx:controlsfx:8.40.11.classpath"/>
    <path refid="library.org.apache.logging.log4j:log4j-api:2.6.1.classpath"/>
    <path refid="library.org.apache.logging.log4j:log4j-core:2.1.classpath"/>
  </path>
  
  <path id="gameroom.runtime.production.module.classpath">
    <pathelement location="${gameroom.output.dir}"/>
    <path refid="library.com.mashape.unirest:unirest-java:1.4.9.classpath"/>
    <path refid="library.org.controlsfx:controlsfx:8.40.11.classpath"/>
    <path refid="library.org.apache.logging.log4j:log4j-api:2.6.1.classpath"/>
    <path refid="library.org.apache.logging.log4j:log4j-core:2.1.classpath"/>
  </path>
  
  <path id="gameroom.module.classpath">
    <path refid="${module.jdk.classpath.gameroom}"/>
    <pathelement location="${gameroom.output.dir}"/>
    <path refid="library.com.mashape.unirest:unirest-java:1.4.9.classpath"/>
    <path refid="library.org.controlsfx:controlsfx:8.40.11.classpath"/>
    <path refid="library.org.apache.logging.log4j:log4j-api:2.6.1.classpath"/>
    <path refid="library.org.apache.logging.log4j:log4j-core:2.1.classpath"/>
  </path>
  
  <path id="gameroom.runtime.module.classpath">
    <pathelement location="${gameroom.testoutput.dir}"/>
    <pathelement location="${gameroom.output.dir}"/>
    <path refid="library.com.mashape.unirest:unirest-java:1.4.9.classpath"/>
    <path refid="library.org.controlsfx:controlsfx:8.40.11.classpath"/>
    <path refid="library.org.apache.logging.log4j:log4j-api:2.6.1.classpath"/>
    <path refid="library.org.apache.logging.log4j:log4j-core:2.1.classpath"/>
  </path>
  
  
  <patternset id="excluded.from.module.gameroom">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.gameroom">
    <patternset refid="excluded.from.module.gameroom"/>
  </patternset>
  
  <path id="gameroom.module.sourcepath">
    <dirset dir="${module.gameroom.basedir}">
      <include name="src"/>
      <include name="src/res"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.gameroom" depends="compile.module.gameroom.production,compile.module.gameroom.tests" description="Compile module GameRoom"/>
  
  <target name="compile.module.gameroom.production" depends="register.custom.compilers" description="Compile module GameRoom; production classes">
    <mkdir dir="${gameroom.output.dir}"/>
    <javac2 destdir="${gameroom.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.gameroom}/javac">
      <compilerarg line="${compiler.args.gameroom}"/>
      <bootclasspath refid="gameroom.module.bootclasspath"/>
      <classpath refid="gameroom.module.production.classpath"/>
      <src refid="gameroom.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.gameroom"/>
    </javac2>
    
    <copy todir="${gameroom.output.dir}">
      <fileset dir="${module.gameroom.basedir}/src">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
      <fileset dir="${module.gameroom.basedir}/src/res">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.gameroom.tests" depends="register.custom.compilers,compile.module.gameroom.production" description="compile module GameRoom; test classes" unless="skip.tests"/>
  
  <target name="clean.module.gameroom" description="cleanup module">
    <delete dir="${gameroom.output.dir}"/>
    <delete dir="${gameroom.testoutput.dir}"/>
  </target>
</project>